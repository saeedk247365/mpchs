        <style>
			@font-face {
   font-family: myFirstFont;
   src: url('/fonts/static/Outfit-SemiBold.ttf');
}
@font-face {
   font-family: mysecondFont;
   src: url('/fonts/static/Outfit-Light.ttf');
}

* {
   font-family: mysecondFont;
}
        body {
	margin: 0;
	padding: 0;
	font-family: 'Poppins', sans-serif;
}
body:before {
	content: '';
	position: fixed;
	width: 100vw;
	height: 100vh;
	background-image: url('../assets/images/login/2.jpg');
	background-position: center center;
	background-repeat: no-repeat;
	background-attachment: fixed;
	-webkit-background-size: cover;
	background-size: cover;
	-webkit-filter: blur(10px);
	-moz-filter: blur(2px);
	filter: blur(3px);
}
.login-form {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 540px;
    height: 560px;
    padding: 90px 40px;
     background: rgba(0, 0, 0, 0.5); 
    margin-top: 60px;
}

.login-form h2 {
	margin: 0;
	padding: 0 0 20px;
	color: #fff;
	text-align: center;
	text-transform: uppercase;
	font-size: 2.5rem;
}
.login-form p {
	margin: 0;
	padding: 0;
	font-weight: bold;
	color: #fff;
}
.login-form input[type=text] {
	
    border: none;
    /* border-bottom: 1px solid #fff; */
    background: rgb(40,40,40);
    outline: none;
    height: 40px;
    color: white;
    font-size: 16px;
    border-radius: 12px;
    padding: 15px;
    width: 65%;
    margin-left: 17%;

}
.login-form input[type=email], .login-form input[type=password] {
	border: none;
    /* border-bottom: 1px solid #fff; */
    background: rgb(40,40,40);
    outline: none;
    height: 40px;
    color: white;
    font-size: 16px;
    border-radius: 12px;
    padding: 15px;
	width: 65%;
    margin-left: 17%;
}
.login-form input[type=submit] {
	height: 40px; 
	color: #fff;
	font-size: 15px;
	background: #E5372B;
	cursor: pointer;
	border-radius: 12px;
	border: none;
	outline: none;
	margin-top: 10%;
	/* padding: 15px; */
	font-family: mysecondFont;
	width: 65%;
    margin-left: 17%;
}
.login-form input[type=submit]:hover {
	
	height: 40px; 
	color: #fff;
	font-size: 15px;
	background: #a1271f;
	cursor: pointer;
	border-radius: 12px;
	border: none;
	outline: none;
	margin-top: 10%;
	/* padding: 15px; */
	font-family: mysecondFont;
	width: 65%;
    margin-left: 17%;
}
.login-form a {
	color: #fff;
	font-size: 14px;
	font-weight: bold;
	text-decoration: none;
}
input[type=checkbox] {
	width: 20%;
}
.logo{
    width: 100px;
    height: 100px;
    margin-left: 30px
}
::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
  color: white;
  opacity: 1; /* Firefox */
}

:-ms-input-placeholder { /* Internet Explorer 10-11 */
  color: white;
}

::-ms-input-placeholder { /* Microsoft Edge */
  color: white;
}
@media only screen and (max-width: 500px) {
	.login-form {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    height: 65%;
    padding: 70px 40px;
    /* background: rgba(0, 0, 0, 0.5); */
    margin-top: 70px;
    border-radius: 10px;
}
			
.login-form input[type=email], .login-form input[type=password] {
	border: none;
    /* border-bottom: 1px solid #fff; */
    background: rgb(40,40,40);
    outline: none;
    height: 40px;
    color: white;
    font-size: 16px;
    border-radius: 12px;
    padding: 15px;
	width: 100%;
    margin-left: 3%;
}
.login-form input[type=text] {
    border: none;
    /* border-bottom: 1px solid #fff; */
    background: rgb(40,40,40);
    outline: none;
    height: 40px;
    color: white;
    font-size: 16px;
    border-radius: 12px;
    padding: 15px;
	width: 100%;
    margin-left: 3%;
}
.login-form input[type=submit] {
	/* height: 30px; */
	color: #fff;
	font-size: 15px;
	background: #E5372B;
	cursor: pointer;
	border-radius: 12px;
	border: none;
	outline: none;
	margin-top: 15%;
	
	font-family: mysecondFont;
	width: 100%;
    margin-left: 3%;
}
.login-form input[type=submit]:hover {
	
	color: #fff;
	font-size: 15px;
	background: #a1271f;
	cursor: pointer;
	border-radius: 12px;
	border: none;
	outline: none;
	margin-top: 15%;
	font-family: mysecondFont;
	width: 100%;
    margin-left: 3%;
}
p a.regg:hover{
	text-decoration: underline !important;
}
  
}

        </style>
    </head>
    <body>
		
        <a style="text-decoration: none;" class="logostyle" href="/">
        <div style="background-color: transparent;position: relative; "><img class="logo" src="../assets/images/bg/multi logo.png" alt="">
            <!-- <span class="sp" style="color:  #E5372B ;font-size: 25px;font-family: Agency FB;font-weight: bold;"> MPCHS</span> -->
        </div>
    </a>
    <div class="login-form">
		
		<h2 style="margin-bottom: 20px; color:white;font-family: myFirstFont;">Sign Up</h2>
		
		<% if (typeof errorMessage !== "undefined") { %>
                                       
			<span style="color: red;"><%= errorMessage %></span>
		<% } %>
		<form method="POST" action="/register">
			<input  name="fname" type="text" placeholder="Enter Full" type="email" required><br><br>
			<input  name="email" type="email" placeholder="Enter Email" type="email" required><br><br>
			<input name="password" type="password" placeholder="Enter Password" type="password" required><br><br>
			<input name="cpassword" type="password" placeholder="Enter Confirm Password" type="password" required>
			 <input class="sign" type="submit" value="Sign Up">
			
		</form>
		<p  style="margin-top: 10px;text-align: center; text-decoration: underline;"><a class="regg" href="/login">Already Registered | Sign In</a></p>
	</div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
    </body>
</html>
